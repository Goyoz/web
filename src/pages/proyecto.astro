---
import { getCollection } from 'astro:content';
import Proyecto from '../componentes/Proyecto.astro'
import Layout from "../layout/Layout.astro";
const proyecto =await getCollection("proyectos");
---

<Layout>
    <div slot="article" class=" w-full flex justify-center  dark:bg-amber-200 dark: text-amber-700 mt-5 mb-5">
		<div class=" md:max-w-5xl grid gap-4 grid-cols-2 justify-center">
				{ proyecto.map((project)=>(
				<Proyecto
					title={project.data.title}
					link={project.data.link}
					description={project.data.description}
					/>
				))
				}
		</div>
	</div>
</Layout>